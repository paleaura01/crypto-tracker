{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "preserveValueImports": false,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$lib/server/*": ["src/lib/server/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/node_modules/**/*",
    "env.d.ts",
    "global.d.ts",
    "src/app.d.ts"
  ]
}
